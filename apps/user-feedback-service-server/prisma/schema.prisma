datasource db {
  provider = "mongodb"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Question {
  answer    String?
  createdAt DateTime @default(now())
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  text      String?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?  @db.ObjectId
}

model Video {
  createdAt DateTime @default(now())
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  updatedAt DateTime @updatedAt
  url       String?
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?  @db.ObjectId
}

model User {
  createdAt   DateTime   @default(now())
  email       String?    @unique
  firstName   String?
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  lastName    String?
  name        String?
  password    String
  phoneNumber String?
  questions   Question[]
  roles       Json
  updatedAt   DateTime   @updatedAt
  username    String     @unique
  videos      Video[]
}
